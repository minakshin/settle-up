<%= form_for(@team) do |f| %>
  <div class="field form-horizontal clearfix">
    <div class="form-group">
      <% if @team.errors.any? %>
          <div class="error error_flash" id="error_explanation">
            <ul>
              <% @team.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          </div>
      <% end %>
        <div class="form-group">
          <%= f.label('', 'Users', class: 'mandatory col-md-2 control-label') %>
          <div class="col-md-8">
            <%= select_tag('team[user_ids][]', options_for_select(@team.users_list.collect {|course| [course.email, course.id]}, @team.users.collect { |certificate_course| certificate_course.id}), {multiple: true, id: 'user-select'}) %>
          </div>
        </div>
      </div>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.submit 'Edit Team', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', teams_path %>
      </div>
    </div>
  </div>
<% end %>
