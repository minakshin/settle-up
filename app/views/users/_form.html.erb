<%= form_for(@user) do |f| %>
  <div class="field form-horizontal new-category clearfix">
    <div class="form-group">
      <%= f.label('', localize('form.name'), class: 'mandatory col-sm-2 control-label') %>
      <div class="col-sm-8">
        <%= f.text_field :name, placeholder: localize('form.name_place'), maxlength: '55', class: 'form-control', data: {message: localize('form.name_error_message')} %>
        <% if @category.errors.any? %>
          <div class="error error_flash" id="error_explanation">
            <ul>
              <% @category.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.submit localize("form.#{action_name}"), class: 'btn btn-primary' %>
        <%= link_to localize('cancel'), categories_path %>
      </div>
    </div>
  </div>
<% end %>
